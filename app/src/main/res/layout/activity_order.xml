<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".view.OrderActivity">
    <androidx.appcompat.widget.Toolbar style="@style/toolbar_style" android:id="@+id/toolbar"></androidx.appcompat.widget.Toolbar>
        <RelativeLayout android:layout_width="match_parent"
                        android:background="@color/meItemBackground"
                        android:layout_height="50dp">
            <TextView android:layout_width="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="10dp"
                      android:textColor="@color/meItem"
                      android:text="已完成订单"
                      android:textSize="15sp"
                      android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_centerVertical="true"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="5dp"
                       android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                       android:layout_height="wrap_content"/>
        </RelativeLayout>

        <View android:layout_width="match_parent"
              android:background="@color/dividingLine"
              android:layout_height="1dp"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:background="@color/meItemBackground"
                    android:layout_height="50dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="10dp"
                  android:textColor="@color/meItem"
                  android:text="未完成订单"
                  android:textSize="15sp"
                  android:layout_height="wrap_content"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="5dp"
                   android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                   android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>